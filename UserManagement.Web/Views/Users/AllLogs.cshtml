@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserManagement.Data.Pagination.PaginatedList<UserManagement.Models.Log>

<h2>All Logs</h2>

@if (Model.Any())
{
<table class="table">
    <thead>
    <tr>
        <th>User ID</th>
        <th>Action</th>
        <th>Timestamp</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var log in Model)
    {
    <tr>
        <td>@log.UserId</td>
        <td>@log.Action</td>
        <td>@log.Timestamp</td>
        <td>@log.Details</td>
    </tr>
    }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @if (Model.HasPreviousPage)
        {
        <li class="page-item">
            <a class="page-link" asp-action="AllLogs" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
        </li>
        }
        @if (Model.HasNextPage)
        {
        <li class="page-item">
            <a class="page-link" asp-action="AllLogs" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
        </li>
        }
    </ul>
</nav>
}
else
{
<p>No logs found.</p>
}

<a asp-action="List" class="btn btn-secondary">Back to User List</a>
