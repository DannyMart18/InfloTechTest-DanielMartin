@using Microsoft.AspNetCore.Mvc.TagHelpers
@model UserManagement.Web.Models.Users.UserLogsViewModel

<h2>Logs for @Model.UserName</h2>

<table class="table">
    <thead>
    <tr>
        <th>Action</th>
        <th>Timestamp</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var log in Model.Logs)
    {
        <tr>
            <td>@log.Action</td>
            <td>@log.Timestamp</td>
            <td>@log.Details</td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="View" asp-route-id="@Model.UserId" class="btn btn-secondary">Back to User</a>
